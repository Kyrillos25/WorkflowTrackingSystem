{
  "Authentication": {
    "Audience": "account",
    "TokenValidationParameters": {
      "ValidIssuers": [ "http://workflowtracking.identity:8080/realms/workflowtracking", "http://localhost:18080/realms/workflowtracking" ]
    },
    "MetadataAddress": "http://workflowtracking.identity:8080/realms/workflowtracking/.well-known/openid-configuration",
    "RequireHttpsMetadata": false
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://workflowtracking.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "workflowtracking.Gateway"
    }
  },
  "OTEL_EXPORTER_OTLP_ENDPOINT": "http://workflowtracking.jaeger:4317",
  "ReverseProxy": {
    "Routes": {
      //"WorkflowTracking-Users-route1": {
      //  "ClusterId": "WorkflowTracking-Users-cluster",
      //  "AuthorizationPolicy": "default",
      //  "Match": {
      //    "Path": "users/{**catch-all}"
      //  },
      //  "Transforms": [ { "PathPattern": "user/{**catch-all}" } ]
      //},
      //"WorkflowTracking-Users-route2": {
      //  "ClusterId": "WorkflowTracking-Users-cluster",
      //  "AuthorizationPolicy": "anonymous",
      //  "Match": {
      //    "Path": "users/register"
      //  }
      //},
      //"WorkflowTracking-Users-route2": {
      //  "ClusterId": "WorkflowTracking-Users-cluster",
      //  "AuthorizationPolicy": "anonymous",
      //  "Match": {
      //    "Path": "users/login"
      //  }
      //},
      //"WorkflowTracking-Users-swagger": {
      //  "ClusterId": "WorkflowTracking-Users-cluster",
      //  "AuthorizationPolicy": "anonymous",
      //  "Match": {
      //    "Path": "users/swagger/{**catch-all}"
      //  },
      //  "Transforms": [ { "PathPattern": "swagger/{**catch-all}" } ]
      //},
      "WorkflowTracking-WFManagement-swagger": {
        "ClusterId": "WorkflowTracking-WFManagement-cluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "WFManagement/swagger/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "swagger/{**catch-all}" } ]
      },
      "WorkflowTracking-WFManagement-route1": {
        "ClusterId": "WorkflowTracking-WFManagement-cluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "WFManagement/v1/Workflows"
        }
      }
    },
    "Clusters": {
      "WorkflowTracking-Users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://WorkflowTracking.Users.api:8080"
          }
        }
      }
    }
  }
}
